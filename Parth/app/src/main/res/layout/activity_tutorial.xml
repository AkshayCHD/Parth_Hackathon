<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.hackathon.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="CATEGORIES"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp" />


    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginLeft="33dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="33dp"
        android:background="@color/white"
        android:elevation="16dp"
        android:onClick="Source"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/farm"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/imageButton2"
        android:layout_marginBottom="10dp"
        android:text="FARMING"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@color/white"
        android:elevation="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bee"
        android:onClick="Source"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BEE KEEPING"
        android:textSize="15sp"

        android:layout_below="@+id/imageButton2"
        android:layout_alignRight="@+id/imageButton2"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:onClick="Source"
        android:elevation="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/plumber" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_below="@+id/imageButton3"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:text="PLUMBING"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton3"
        android:background="@color/white"
        android:onClick="Source"
        android:elevation="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/typing" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/imageButton4"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="TYPING"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_below="@+id/textView5"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:onClick="Source"
        android:elevation="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/electronic" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView4"
        android:layout_alignRight="@+id/textView4"
        android:layout_below="@+id/imageButton6"
        android:layout_marginBottom="5dp"
        android:text="CODING"
        android:textSize="15sp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_alignLeft="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:layout_alignTop="@+id/imageButton5"
        android:background="@color/white"
        android:onClick="Source"
        android:elevation="16dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/coding" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_below="@+id/imageButton5"
        android:layout_marginBottom="5dp"
        android:text="ELECTRONICS"
        android:textSize="15sp" />


</RelativeLayout>
